<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHelperDashboard"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/txtshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="Helper"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose the type of service you want"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginTop="220dp">


                <Button
                    android:id="@+id/emergency"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/Ask"


                    android:background="@drawable/driver_click_bg"
                    android:text="Emergency"
                    android:textSize="20sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginTop="350dp">

                <Button
                    android:id="@+id/regular"
                    android:layout_width="300dp"
                    android:layout_height="100dp"

                    android:layout_below="@+id/txtshow"
                    android:text="Regular"
                    android:textSize="20sp"
                    android:background="@drawable/driver_click_bg"/>

            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginTop="500dp">

        <Button
            android:id="@+id/pastService"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="View Past Services"
            android:textSize="20sp"
            android:layout_marginBottom="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginTop="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"

            android:background="@color/primary_light"/>

    </LinearLayout>


    <Button android:layout_width="74dp" android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:id="@+id/back"
            android:text="Go Back"
            android:background="@color/quantum_purple100"
            android:drawablePadding="4dp"


            android:translationX="-20dp"/>


</RelativeLayout>