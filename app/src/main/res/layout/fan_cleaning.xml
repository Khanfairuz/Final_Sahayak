<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fan"
    android:background="@drawable/fan_cleaningbg"
    >

    <TextView
        android:id="@+id/txtshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/places_autocomplete_powered_by_google_height"

        android:text="Fan Cleaning"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
        android:orientation="horizontal">

        <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total Number of Fan: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginBottom="@dimen/places_autocomplete_prediction_secondary_text"
                android:layout_marginTop="@dimen/places_autocomplete_prediction_secondary_text"
                tools:ignore="InefficientWeight">

        </TextView>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/areaI"
            android:hint="Give data"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginBottom="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginTop="@dimen/places_autocomplete_prediction_secondary_text"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginTop="220dp">

        <TextView
            android:id="@+id/customer"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_below="@+id/Ask"
            android:gravity="center"

            android:background="@drawable/rounded_corner"
            android:text="Cost per fan is 100tk."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginBottom="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginTop="@dimen/places_autocomplete_prediction_secondary_text"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
        android:layout_marginTop="350dp"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cost"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:text="Total cost:"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginBottom="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginTop="@dimen/places_autocomplete_prediction_secondary_text"/>

        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
            android:background="@color/purple"
            android:text="Add to Cart"
            android:textColor="@color/white">

        </Button>

    </LinearLayout>


    <Button
            android:layout_width="74dp" android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:id="@+id/back"
            android:text="Go Back"
            android:background="@color/quantum_purple100"
            android:drawablePadding="4dp"


            android:translationX="10dp"/>



</RelativeLayout>