<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context=".RatingDriver"
                 android:background="@color/white">
             <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:layout_marginTop="250dp"
                       android:text="Please Submit Your Ratings"
                       android:textAlignment="center"
                       android:textStyle="italic"
                       android:textSize="20dp"
                       android:id="@+id/textView"
                       />
            <RatingBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_below="@+id/textView"
                       android:layout_marginTop="25dp"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/ratingStar"
                       android:numStars="5"
                       />
           <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/submitStar"
                   android:layout_below="@+id/ratingStar"
                   android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                   android:text="Submit"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/backToDashBoard"
            android:layout_below="@+id/submitStar"
            android:layout_marginLeft="20dp"
            android:layout_margin="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="BackToDashBoard"/>



</RelativeLayout>