<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
    android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
    tools:context=".Kitchen"
    android:orientation="vertical"
    android:background="@drawable/dishwashingbg"
    >

    <TextView
        android:id="@+id/txtshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:layout_marginStart="@dimen/places_autocomplete_powered_by_google_height"

        android:text="Kitchen Work"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"

        android:layout_marginTop="220dp"
        >

        <TextView
            android:id="@+id/helper"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:text="Total cost: 300 Tk"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginTop="@dimen/places_autocomplete_prediction_secondary_text"/>

        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:layout_marginEnd="@dimen/places_autocomplete_prediction_secondary_text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/places_autocomplete_prediction_secondary_text"
            android:background="@color/purple"
            android:textColor="@color/white">

        </Button>

    </LinearLayout>



    <Button
        android:layout_width="74dp" android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:id="@+id/back"
        android:text="Go Back"
        android:background="@color/purple"
        android:drawablePadding="4dp"


        />



</RelativeLayout>